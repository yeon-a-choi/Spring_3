<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    
<mapper namespace="com.ee.y3.notice.NoticeDAO">

	<select id="getTotalCount" resultType="Long">
		<!-- parameterType="long"을 사용함, 보낼 값 하나 -->
		select count(num) from notice
	</select>

	<!-- 글 전체 불러오기 -->
	<select id="getList" parameterType="Pager" resultType="NoticeDTO">	
		<!-- Map의 키를 받아서 불러오기
		parameterType="java.util.Map"으로 바꿔주고
		select * from 
			(select rownum R, N.* from 
			(select * from notice where num>0 order by num desc) N)
		where R between #{startRow} and #{lastRow} -->
		
		select * from
			(select rownum R, N.* from
				(select * from notice where num>0 order by num desc) N)
		where R between #{startRow} and #{lastRow}
		
	</select>
	
	
	<!-- 선택한 글의 상세 내용 불러오기 -->
	<select id="getSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
		select * from notice where num=#{num}
	</select>
	
	<!-- 공지 작성 -->
	<insert id="setInsert" parameterType="NoticeDTO">
		insert into notice values (notice_seq.nextval, #{title}, #{writer}, #{contents}, 0, sysdate)
	</insert>
	
	<!-- 공지 수정 -->
	<update id="setUpdate" parameterType="NoticeDTO">
		update notice set title = #{title}, writer = #{writer}, contents = #{contents}, hit = #{hit}, regdate = sysdate where num = #{num}
	</update>
	
	<!-- 공지 삭제 -->
	<delete id="setDelete" parameterType="NoticeDTO">
		delete notice where num = #{num}
	</delete>


</mapper>