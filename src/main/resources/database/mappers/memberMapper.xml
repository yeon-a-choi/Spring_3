<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    
<mapper namespace="com.ee.y3.member.MemberDAO">
																		<!-- resultType : com.ee.y3.member.MemberDTO받아서 하나씩 넘기기? -->
	<select id="memberLogin" parameterType="com.ee.y3.member.MemberDTO" resultType="com.ee.y3.member.MemberDTO">

		select * from member where id = #{id} and pw = #{pw}
		
	</select>
	
	
	<!-- insert는 resultType이 int이므로 resultType선언 x -->
	<insert id="memberJoin" parameterType="com.ee.y3.member.MemberDTO">
	
		insert into member values(#{id}, #{pw}, #{name}, #{phone}, #{email})
	
	</insert>
	
	<delete id="memberDelete" parameterType="com.ee.y3.member.MemberDTO">
	
		delete from member where id = #{id}
	
	</delete>

	<update id="memberUpdate" parameterType="com.ee.y3.member.MemberDTO">
	
		update member set pw=#{pw}, name=#{name}, phone=#{phone}, email=#{email} where id=#{id}
	
	</update>



</mapper>